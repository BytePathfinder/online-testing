<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <!--用户添加-->
    <servlet>
        <servlet-name>userAdd</servlet-name>
        <servlet-class>com.mjtx.servlet.UserAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userAdd</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>
    <!--用户登录-->
    <servlet>
        <servlet-name>userLogin</servlet-name>
        <servlet-class>com.mjtx.servlet.UserLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--用户查询-->
    <servlet>
        <servlet-name>userSelect</servlet-name>
        <servlet-class>com.mjtx.servlet.UserSelect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userSelect</servlet-name>
        <url-pattern>/user/select</url-pattern>
    </servlet-mapping>
    <!--用户删除-->
    <servlet>
        <servlet-name>userDelete</servlet-name>
        <servlet-class>com.mjtx.servlet.UserDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userDelete</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>
    <!--用户更新-->
    <servlet>
        <servlet-name>userUpdate</servlet-name>
        <servlet-class>com.mjtx.servlet.UserUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userUpdate</servlet-name>
        <url-pattern>/user/update</url-pattern>
    </servlet-mapping>
    <!--问题添加-->
    <servlet>
        <servlet-name>questionsAdd</servlet-name>
        <servlet-class>com.mjtx.servlet.QuestionAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionsAdd</servlet-name>
        <url-pattern>/questions/add</url-pattern>
    </servlet-mapping>
    <!--问题查询-->
    <servlet>
        <servlet-name>questionsSelect</servlet-name>
        <servlet-class>com.mjtx.servlet.QuestionsSelect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionsSelect</servlet-name>
        <url-pattern>/questions/select</url-pattern>
    </servlet-mapping>
    <!--问题更新-->
    <servlet>
        <servlet-name>questionsUpdate</servlet-name>
        <servlet-class>com.mjtx.servlet.QuestionsUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionsUpdate</servlet-name>
        <url-pattern>/questions/update</url-pattern>
    </servlet-mapping>
    <!--问题删除-->
    <servlet>
        <servlet-name>questionsDelete</servlet-name>
        <servlet-class>com.mjtx.servlet.QuestionsDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionsDelete</servlet-name>
        <url-pattern>/questions/delete</url-pattern>
    </servlet-mapping>
    <!--趣味测试-->
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>com.mjtx.servlet.Test</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <!--得分-->
    <servlet>
        <servlet-name>score</servlet-name>
        <servlet-class>com.mjtx.servlet.Score</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>score</servlet-name>
        <url-pattern>/score</url-pattern>
    </servlet-mapping>

    <!--过滤器-->
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.mjtx.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--自定义默认页-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>